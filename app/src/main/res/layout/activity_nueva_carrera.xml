<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="0dp"
    tools:context="com.unam.podium.podium.NuevaCarrera"
    android:weightSum="9.2"
    android:background="#000000">



    <LinearLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_weight="2.8"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idPhoto"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/med_b"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:singleLine="true"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="30sp"
                android:textColor="#00ff00"
                android:id="@+id/idName"
                android:editable="true"/>

            <TextView
                android:textSize="40dp"
                android:textColor="#ffffff"
                android:singleLine="true"
                android:layout_weight="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00km"
                android:id="@+id/textView6" />

            <TextView
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:singleLine="true"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total de km"
                android:id="@+id/textView7" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="#888888"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/linea"/>

            <TextView
                android:padding="10dp"
                android:singleLine="true"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="   Muestras"
                android:textColor="#ffffff"
                android:id="@+id/textView8" />

            <ImageView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/linea"
                android:id="@+id/imageView3" />
        </LinearLayout>

        <LinearLayout

            android:layout_weight="1"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:id="@+id/imageView4"
                android:src="@drawable/cara_b"/>

            <TextView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="70dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:textColor="#229aea"
                android:text="-- --"
                android:id="@+id/temperatura" />

            <ImageView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/corazon_b"
                android:id="@+id/imageView5" />

            <TextView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="70dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:textColor="#229aea"
                android:text="-- --"
                android:id="@+id/pulso" />

            <ImageView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/reloj_b"
                android:id="@+id/imageView6" />

            <TextView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="70dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:textColor="#229aea"
                android:text="-- --"
                android:id="@+id/tiempo" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_weight="4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/map" tools:context=".MapsActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment" />

    </RelativeLayout>

</LinearLayout>
